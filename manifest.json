{
	"manifest_version": 2,
	"name": "Hemterest",
	"description": "Beautify Hemnet with Pinterest style galleries instead of the default image slider.",
	"version": "0.1.1",
	"permissions": ["*://*.hemnet.se/*"],
	"web_accessible_resources": ["src/css/hemterest.css"],
	"icons": {
		"16": "./src/icons/icon-16.png",
		"48": "./src/icons/icon-48.png",
		"128": "./src/icons/icon.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "./src/icons/icon-19.png",
			"38": "./src/icons/icon-38.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["*://*.hemnet.se/*"],
			"js": ["src/js/hemterest.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["*://*.hemnet.se/*"],
			"css": ["src/css/hemterest.css"]
		}
	]
}
