{
  "manifest_version": 2,
  "name": "Deeptask",
  "description": "Deeplink to Trello task in a card",
  "version": "0.1.0",
  "permissions": [
    "*://*.trello.com/*"
  ],
  "web_accessible_resources": [
    "src/css/deeptask.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "js": [
        "src/js/deeptask.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "css": [
        "src/css/deeptask.css"
      ]
    }
  ]
}
